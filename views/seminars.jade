extends shared/layout

block extra_styles
  link(rel="stylesheet", href="/stylesheets/seminars.css")

block content
  //- Navigation Bar
  include shared/nav-list

  //- CTA
  include shared/ctas/seminar

  //- Filters
  aside
    h1.peachy Filters
    ul(class="sidebar-list")
      each filter in filters
        li= filter

  //- Seminars
  main
    //- Search Bar
    section.search-bar
      a.sort(href="#") Sort &#9662;
        ul.sorting-options
          li Newest
          li Most Popular
          li Greatest Expense
          li Least Expense
      input(type="text", name="search-query", placeholder="Search...")

    - var i = 0
    while i < 15
      section(class="seminar", style="background-image: url('/images/cta-headers/#{seminars[1].headerImageFilename}')")
        h1= seminars[1].title
        p= seminars[1].description
        a(href="/seminars/" + seminars[1].idHash)
          button Book
        a(href="/seminars/star/" + seminars[1].idHash)
          button.yellow Star
      - i++
