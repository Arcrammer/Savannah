extend shared/layout

block content
  //- Navigation
  include shared/nav-cta.jade
  
  //- Search Bar
  div(class="search-bar")
    p Sort &#9662;
    input(type="text", name="search-query")
  
  //- Carted Products
  section(class="hardware")
  h1 Clearance
  - var i = 0
  while i < 5
    - i++
    div
      h1= products[i].ItemAttributes[0].Brand + " " + products[i].ItemAttributes[0].Model
      img(src=products[i].LargeImage[0].URL[0])
      p= products[i].ItemAttributes[0].Title
      ul
      each feature in products[i].ItemAttributes[0].Feature
        li= feature
    p= products[i].ItemAttributes[0].ListPrice[0].FormattedPrice
    a(href="/products/" + products[i].ASIN[0]) More &raquo;

  //- Checkout Form
  form(action="/open-in-new-tabs-with-amazon/", method="POST")
    //- Full Name
    input(type="text", name="first_name")
    input(type="text", name="last_name")
    //- Shipping Address
    input(type="text", name="shipping_address_line_1")
    input(type="text", name="shipping_address_line_2")
    input(type="text", name="city")
    input(type="text", name="state")
    input(type="text", name="ZIP")
    //- Payment Info
    input(type="text", name="card_number")
    input(type="text", name="name_on_the_card")
    input(type="text", name="month")
    input(type="text", name="day")
    input(type="text", name="year")
    input(type="text", name="CVV")
    //- Options
    input#should_bill_shipping_address(
      type="checkbox",
      name="should_bill_shipping_address"
    )
    label(for="should_bill_shipping_address") Bill my Shipping Address
    
    input#agrees_to_terms_and_conditions(
      type="checkbox",
      name="agrees_to_terms_and_conditions"
    )
    label(for="agrees_to_terms_and_conditions") I agree to the Terms and Conditions
