extends ../shared/layout

block extra_styles
  link(rel="stylesheet", href="/stylesheets/auth.css")

block content
  //- Navigation Bar
  include ../shared/nav-list

  form(class="registration-form", method="POST")
    p.message= message
    input.field(type="text", name="username", placeholder="Username")
    input.field(type="password", name="password", placeholder="Password")
    input.field(type="text", name="first_name", placeholder="First Name")
    input.field(type="text", name="last_name", placeholder="Last Name")
    input.field(type="email", name="email_address", placeholder="Email Address")
    input.field(type="text", name="location", placeholder="City and State")
    input.submission-button(type="submit", value="Sign up")

block extra_scripts
  script(src="/scripts/registration.js")
